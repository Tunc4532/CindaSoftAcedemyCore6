@model List<Lesson>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<div class="card-body p-3">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                <div class="card card-blog card-plain">
                    <div class="position-relative">
                        <a class="d-block shadow-xl border-radius-xl">
                            <img src="@item.LessImage" alt="img-blur-shadow" style="height:160px;width:273px" class="img-fluid shadow border-radius-xl">
                        </a>
                    </div>
                    <div class="card-body px-1 pb-0">
                        <p class="text-gradient text-dark mb-2 text-sm">@item.LessName </p>
                        <a href="/Student/MyLesson/WatchLesson/@item.LessonID" class="btn btn-primary">
                            Dersi İzle
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

