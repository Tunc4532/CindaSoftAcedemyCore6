
@model List<AppUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Kullanıcılar </h4>
            <p class="card-description">
                Kontrol Etme <code>.Kullanıcı</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Fotoğraf</th>
                            <th> Ad Soyad </th>
                            <th> Mail </th>
                            <th> Sil </th>
                            <th> Uyarı Gönder </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                @{sayac = sayac +1;} 
                                <td>@sayac</td>
                                <td class="py-1">
                                    <img src="~/Userimages/@item.ImageUrl" alt="image" />
                                </td>
                                <td> @item.Name @item.SurName </td>
                                <td> @item.Email </td>
                                <td><a href="/Admin/User/DeleteUser/@item.Id" class="btn btn-outline-danger" onclick="return confirm('Silmek istediğinden emin misin?')">Sil</a></td>
                                <td><a href="#" class="btn btn-outline-warning">Uyarı Gönder</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Login/SıgnUp/" class="btn btn-outline-info">Yeni Kullanıcı Kaydı</a>
                <br />
            </div>
        </div>
    </div>
</div>

