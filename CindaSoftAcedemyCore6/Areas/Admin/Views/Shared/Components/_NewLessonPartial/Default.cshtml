@model List<Education>
<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <div class="d-flex flex-row justify-content-between">
                <h4 class="card-title mb-1">Yeni Eğitimler</h4>
                <p class="text-muted mb-1">Admin Eğitim Paneli</p>
            </div>
            <div class="row">
                @foreach(var item in Model)
                {
                <div class="col-12">
                    <div class="preview-list">
                        <div class="preview-item border-bottom">
                            <div class="preview-thumbnail">
                                <div class="preview-icon bg-primary">
                                    <img src="@item.ImageUrl" />
                                </div>
                            </div>
                            <div class="preview-item-content d-sm-flex flex-grow">
                                <div class="flex-grow">
                                    <h6 class="preview-subject">@item.Description</h6>
                                    <p class="text-muted mb-0">@item.Name @item.AppUserId</p>
                                </div>
                                <div class="mr-auto text-sm-right pt-2 pt-sm-0">
                                    <p class="text-muted">@item.Time.00 ₺</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                }
            </div>
        </div>
    </div>
</div>