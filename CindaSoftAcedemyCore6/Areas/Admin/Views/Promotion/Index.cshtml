@model List<Promotion>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Biz Kimiz </h4>
            <p class="card-description">
                Düzenleme <code>.Hakkımızda</code>
            </p>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th> # </th>
                            <th> Başlık</th>
                            <th> Konu </th>
                            <th> Sil </th>
                            <th> Güncelle </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.PromotionID</td>
                                <td> @item.Header </td>
                                <td> @item.Tittle </td>
                                <td><a href="/Admin/Promotion/DeletePromotion/@item.PromotionID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Admin/Promotion/EditPromotion/@item.PromotionID" class="btn btn-outline-warning">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href="/Admin/Promotion/AddPromotion/" class="btn btn-outline-info">Yeni Ekle</a>
            </div>
        </div>
    </div>
</div>

