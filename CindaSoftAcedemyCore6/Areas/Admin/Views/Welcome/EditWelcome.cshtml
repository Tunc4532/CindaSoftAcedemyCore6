@model EntityLayer.Concrete.Welcome
@{
    ViewData["Title"] = "EditWelcome";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 style="text-align: center"> Hoş Geldiniz Güncelleme Paneli</h3>
<form method="post">
    <input type="hidden" class="col-form-label" asp-for="WelcomeID" />
    <div>
        <span class="col-form-label">Başlık</span>
        <input type="text" asp-for="Tittle" class="form-control" />
    </div>
    <br />
    <div>
        <span class="col-form-label">Açıklama</span>
        <textarea cols="30" rows="5" asp-for="Description" class="form-control"></textarea>
    </div>
    <div>
        <span class="col-form-label">Fotoğraf Url</span>
        <input type="text" asp-for="ImageUrl" class="form-control" />
    </div>
    <br />
    <button class="btn btn-sm btn-outline-success">Güncelle</button>
</form>
