@model EntityLayer.Concrete.Feature
@{
    ViewData["Title"] = "EditFeature";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 style="text-align: center"> Öne Çıkan Güncelleme Paneli</h3>
<form method="post">
    <input type="hidden" class="col-form-label" asp-for="FeatureID" />
    <div>
        <span class="col-form-label">Resim Url</span>
        <input type="text" asp-for="ImageUrl" class="form-control" />
    </div>
    <br />
    <div>
        <span class="col-form-label">Başlık</span>
        <input type="text" asp-for="Header" class="form-control" />
    </div>
    <br />
    <button class="btn btn-sm btn-outline-success">Güncelle</button>
</form>
