@model List<Education>

@{
    ViewData["Title"] = "LessonList";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<br />
<br />
<br />
<br />

<div class="card-body p-3">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-xl-3 col-md-6 mb-xl-0 mb-4">
                <div class="card card-blog card-plain">
                    <div class="position-relative">
                        <a class="d-block shadow-xl border-radius-xl">
                            <img src="@item.ImageUrl" alt="img-blur-shadow" style="height:160px;width:273px" class="img-fluid shadow border-radius-xl">
                        </a>
                    </div>
                    <div class="card-body px-1 pb-0">
                        <p class="text-gradient text-dark mb-2 text-sm">@item.EdicationName </p>
                        <a href="/TeacherA/Lesson/DeleteLesson/@item.EducationID" class="btn btn-danger">
                            Sil
                        </a>
                        <a href="/TeacherA/Lesson/EditLesson/@item.EducationID" class="btn btn-info">
                            Güncelle
                        </a>
                        <a href="/TeacherA/Lesson/EditLesson/@item.EducationID" class="btn btn-primary">
                            Detay
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<br />
