        </div>
    </main>

    @await Html.PartialAsync("/Areas/Student/Views/UserLayoutPartial/_SettingPartial.cshtml")
   
    @await Html.PartialAsync("/Areas/Student/Views/UserLayoutPartial/_ScriptPartial.cshtml")

